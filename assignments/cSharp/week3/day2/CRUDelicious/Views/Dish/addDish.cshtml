@{ ViewData["Title"] = "Add New Dish"; } 

@model Dish

<head>
  <link rel="stylesheet" href="~/css/add.css" />
</head>

@section Title{
<div class="text-center">
  <h1>Add a New Dish!</h1>
</div>
}

<form asp-action="Create" asp-controller="Dish" method="post">
  <div class="dish-container">
    <!--+---------------------------SECTION 1----------------------------->
    <div class="section1">
      <!--* CHEF NAME -->
      <section class="chef">
        <label asp-for="Chef">Chef's Name</label>
        <input asp-for="Chef" type="text" />
        <span asp-validation-for="Chef"></span>
      </section>

      <!--* DISH NAME -->
      <section class="dish">
        <label asp-for="Name">Name of Dish</label>
        <input asp-for="Name" type="text" />
        <span asp-validation-for="Name"></span>
      </section>

      <!--* CALORIES -->
      <section class="calories">
        <label asp-for="Calories"># of Calories</label>
        <input asp-for="Calories" type="number" />
        <span asp-validation-for="Calories"></span>
      </section>
    </div>

    <!--+---------------------------SECTION 2----------------------------->
    <div class="section2">
      <!--* TASTINESS -->
      <section class="tasty">
        <label asp-for="Tastiness">Tastiness</label>
        <select asp-for="Tastiness">
          <option value="">Choose</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness"></span>
      </section>
    </div>

    <!--+---------------------------SECTION 3----------------------------->
    <div class="section3">
      <!--* DESCRIPTION  -->
      <section class="text-box">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" cols="55" rows="7"></textarea>
        <span asp-validation-for="Description"></span>
      </section>

      <!--* BUTTONS -->
      <button>Add Dish</button>
    </div>
  </div>
</form>
