<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRUDelicious</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link
      href="https://fonts.googleapis.com/css?family=Quicksand:300,regular,500,600,700"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="~/CRUDelicious.styles.css"
      asp-append-version="true"
    />
  </head>
  <body>
    <header>
      @RenderSection("Title",false)
      
      <!--* NAVBAR -->
      <nav class="mt-3">
        <ul class="nav justify-content-center h3">
          <div class="nav-container">
            <li id="nav-bar" class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <span id="home-nav"></span>
            <li id="nav-bar" class="nav-item">
              <a class="nav-link" href="/dishes/new">Add Dish</a>
            </li>
          </div>
        </ul>
      </nav>
    </header>
    
    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
