<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Gamja+Flower:regular" rel="stylesheet" />
    <title>Time Display</title>
  </head>
  <body>
<div class="container">
    <div class="times">
      <div class="start-end">
        <h1>Start Time</h1>
        @{ 
          DateTime start = DateTime.Now;
          string startTime = DateTime.Now.ToString("MMM dd, yyyy");
          string startHour = DateTime.Now.ToString("hh:ss tt");
        <h3>@startTime</h3>
        <h3>@startHour</h3>
        }
      </div>

      <div class="start-end">
        <h1>End Time</h1>
        @{ DateTime end; end = Convert.ToDateTime("07/15/2023");
        string endTime = end.ToString("MMM dd, yyyy");
        string endHour = end.ToString("hh:ss tt");
          <h3>@endTime</h3>
          <h3>@endHour</h3>
        }
      </div>
    </div>
    
    <div class="remaining">
      <h1>Time Remaining</h1>
      @{
        TimeSpan t = end - start;
        string countdown = string.Format("{0} Day(s), {1} Hour(s), {2} Minute(s)remaining.", t.Days, t.Hours, t.Minutes);
      }
      <h2>@countdown</h2>
      <h2>Remaining</h2>
    </div>
  </div>
  </body>
</html>
