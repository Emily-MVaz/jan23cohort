@{ ViewData["Title"] = "Home Page"; }
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Document</title>
  </head>
  <body>
    <main>
      <form class="choose-date" action="checkDate">
        @model Date
        <span asp-validation-for="date_time"></span>
        <label asp-for="date_time">Choose a Date:</label>
        <input type="date" asp-for="date_time" />
        <button>Submit</button>
      </form>
    </main>
  </body>
</html>
